@using ET_Vest.Models.Enums
@model ET_Vest.Models.PrintedEdition

<h2>Edit PrintedEdition</h2>
<form asp-controller="PrintedEditionProvider" asp-action="Edit" method="post">
    <div class="form-control">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cathegory"></label>
        <select asp-for="Cathegory" asp-items="Html.GetEnumSelectList<Cathegory>()" class="form-control">
            <option value="">Select a category</option>
        </select>
    </div>  
    <div class="form-group">
        <label asp-for="Periodicity"></label>
        <select asp-for="Periodicity" asp-items="Html.GetEnumSelectList<Periodicity>()" class="form-control">
            <option value="">Select a periodicity</option>
        </select>
        <div class="form-group">
            <label asp-for="DeliveredUnitPrice" class="form-label"></label>
            <input asp-for="DeliveredUnitPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SalePrice" class="form-label"></label>
            <input asp-for="SalePrice" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PrintEditionProviders"></label>
        <select asp-for="PrintEditionProviders"
                asp-items="@(new SelectList(ViewBag.Providers,"Name"))"
                class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Requests"></label>
        <input asp-for="Requests" asp-items="@(new SelectList(ViewBag.Requests,"Id"))"
               class="form-control" />
    </div>
    <input asp-for="@Model.PrintedEditionId" class="d-none" value="@Model.PrintedEditionId" />
    <a type="submit" value="Update" class="btn btn-primary" asp-action="Edit" />
</form>