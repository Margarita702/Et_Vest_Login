@model ET_Vest.Models.Provider

<h2>Add Provider</h2>
<form asp-action="Add">
    <div class="form-control">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PrintEditionProviders"></label>
        <select asp-for="PrintEditionProviders"
                asp-items="@(new SelectList(ViewBag.PrintedEditions,"Title"))"
                class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Provider">Add</button>
</form>